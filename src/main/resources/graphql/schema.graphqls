type Query {
    hello: String
    books: [Book]
    book(id: ID!): Book
    authors: [Author]
    author(id: ID!): Author
}

type Mutation {
    createBook(title: String!, authorId: ID!): Book
    updateBook(id: ID!, title: String!, authorId: ID!): Book
    deleteBook(id: ID!): Boolean
    createAuthor(firstName: String!, lastName: String!): Author
    updateAuthor(id: ID!, firstName: String!, lastName: String!): Author
    deleteAuthor(id: ID!): Boolean
}

type Book {
    id: ID!
    title: String!
    authorId: ID!
    author: Author!
}

type Author {
    id: ID!
    firstName: String!
    lastName: String!
    books: [Book]!
} 